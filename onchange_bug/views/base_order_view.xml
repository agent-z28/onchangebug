<odoo>
    <data>
        <record id="view_base_order_tree" model="ir.ui.view">
            <field name="name">base.order.tree</field>
            <field name="model">base.order</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
            <tree string="Base Order">
                <field name="name"/>
            </tree>
            </field>
        </record>

        <record id="view_base_order_form" model="ir.ui.view">
            <field name="name">base.order.form</field>
            <field name="model">base.order</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
            <form string="Base Order">
                <field name="name" select="1"/>
                <field name="base_order_tour_ids">
                    <tree editable="bottom">
                        <field name="distance"/>
                    </tree>
                </field>
                <field name="base_order_cost_ids">
                    <tree editable="bottom">
                        <field name="base_order_tour_id"/>
                        <field name="price" force_save="1"/>
                    </tree>
                </field>
            </form>
            </field>
        </record>

        <record id="view_base_order_search" model="ir.ui.view">
            <field name="name">base.order.search</field>
            <field name="model">base.order</field>
            <field name="type">search</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
            <search string="Base Order">
                <field name="name" select="True"/>
            </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_base_order_view">
            <field name="name">Base Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">base.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_base_order_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_base_order_view_form">
            <field name="act_window_id" ref="act_open_base_order_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_base_order_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_base_order_view_tree">
            <field name="act_window_id" ref="act_open_base_order_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_base_order_tree"/>
        </record>

        <menuitem id="menu_base_order"
            sequence="20"
            action="act_open_base_order_view"/>
    </data>
</odoo>
